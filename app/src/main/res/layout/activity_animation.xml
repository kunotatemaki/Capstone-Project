<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        >
        <ImageView
            android:id="@+id/circle1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/circle_space"
            android:layout_marginRight="@dimen/circle_space"
            android:background="@drawable/circle"
        />
        <ImageView
            android:id="@+id/circle2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/circle_space"
            android:layout_marginRight="@dimen/circle_space"
            android:background="@drawable/circle"
        />
        <ImageView
            android:id="@+id/circle3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/circle_space"
            android:layout_marginRight="@dimen/circle_space"
            android:background="@drawable/circle"
        />
        <ImageView
            android:id="@+id/circle4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/circle_space"
            android:layout_marginRight="@dimen/circle_space"
            android:background="@drawable/circle"
        />
        <ImageView
            android:id="@+id/circle5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/circle_space"
            android:layout_marginRight="@dimen/circle_space"
            android:background="@drawable/circle"
        />
        <ImageView
            android:id="@+id/circle6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="@dimen/circle_space"
            android:layout_marginRight="@dimen/circle_space"
            android:background="@drawable/circle"
        />

    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IMAGINE"
            android:textSize="@dimen/imaginecreate_sp"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/margin_imagine_right"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CREATE"
            android:layout_marginLeft="@dimen/margin_create_left"
            android:layout_marginRight="@dimen/margin_create_right"
            android:textStyle="bold"
            android:textSize="@dimen/imaginecreate_sp"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginRight="@dimen/margin_rukia"
        android:visibility="visible"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RUKIA"
            android:textSize="@dimen/rukiasoft_sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SOFT"
            android:textStyle="bold"
            android:textSize="@dimen/rukiasoft_sp"
            />
    </LinearLayout>

</FrameLayout>