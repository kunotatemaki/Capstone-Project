<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/appbarlayout_recipe_details"
        android:background="@android:color/transparent"
        app:contentScrim="@android:color/transparent">
        <android.support.design.widget.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar_recipe_details"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:background="@android:color/transparent"
            app:contentScrim="@android:color/transparent"
            app:expandedTitleMarginEnd="@dimen/title_margin_collapsed"
            app:collapsedTitleTextAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse"
            app:expandedTitleTextAppearance="@style/Theme.ExpandedText.Trasparent"
            app:expandedTitleMarginStart="@dimen/title_margin_expanded"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <com.rukiasoft.androidapps.cocinaconroll.classes.ThreeTwoImageView
                android:id="@+id/recipe_pic"
                android:transitionName="@string/recipe_image_transition_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:scaleType="centerCrop"
                app:layout_collapseMode="parallax"
                />
            <com.rukiasoft.androidapps.cocinaconroll.classes.ThreeTwoImageView
                android:id="@+id/recipe_pic_protection"
                android:transitionName="@string/recipe_image_protection_transition_name"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/photo_background_protection"
                app:layout_collapseMode="parallax"/>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_recipe_details"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:contentScrim="@android:color/transparent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:contentInsetStart="@dimen/title_margin_collapsed"
                app:layout_collapseMode="pin"/>
            <TextView
                android:id="@+id/recipe_name_recipe_details"
                android:transitionName="@string/recipe_name_transition_name"
                android:textAppearance="@style/Theme.ExpandedText"
                android:layout_gravity="bottom"
                app:layout_anchor="@id/appbarlayout_recipe_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/title_margin_expanded"/>
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <com.rukiasoft.androidapps.cocinaconroll.classes.ObservableScrollView
        android:id="@+id/scrollview_recipe_details"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_link_recipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="4dp"
                android:clickable="false"
                android:focusable="false"
                >
                <TextView
                    android:id="@+id/prueba1"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:text="Aquí irá la dirección linkada a la receta original de la mierda de blog del señor pastor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="4dp"
                    android:paddingTop="4dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2dp"/>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_ingredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="4dp"
                android:clickable="false"
                android:focusable="false"
                >
                <TextView
                    android:id="@+id/prueba2"
                    style="@style/TextAppearance.AppCompat.Subhead"
                    android:text="Aquí irán los ingredientes ricos para ganar mucha pasta con la gente que sube las recetas gratis"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:paddingLeft="4dp"
                    android:paddingTop="4dp"
                    android:paddingRight="4dp"
                    android:paddingBottom="2dp"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </com.rukiasoft.androidapps.cocinaconroll.classes.ObservableScrollView>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/favorite_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="mini"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        android:src="@drawable/ic_favorite_white_24dp"
        android:layout_margin="@dimen/fab_margin"
        app:layout_anchor="@id/appbarlayout_recipe_details"
        app:layout_anchorGravity="bottom|right|end"
        android:contentDescription="@string/action_share"
        app:rippleColor="@android:color/white"
        app:borderWidth="0dp"/>

</android.support.design.widget.CoordinatorLayout>
