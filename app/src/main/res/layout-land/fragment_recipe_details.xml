<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="RtlHardcoded">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:fitsSystemWindows="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="RtlHardcoded"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:id="@+id/photo_container_recipe_details">
            <ImageView
                android:id="@+id/recipe_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                />
            <ImageView
                android:id="@+id/recipe_pic_protection"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/photo_background_protection"/>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_recipe_details"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:contentScrim="@android:color/transparent"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/recipe_name_recipe_details"
                android:textAppearance="@style/Theme.ExpandedText"
                android:layout_alignParentBottom="true"
                app:layout_anchor="@id/appbarlayout_recipe_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="@dimen/title_margin_expanded"
                android:layout_marginEnd="@dimen/title_margin_expanded"
                android:layout_marginStart="@dimen/title_margin_expanded"
                android:layout_marginRight="@dimen/title_margin_expanded"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/recipe_description_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:fabSize="mini"
                android:elevation="6dp"
                app:pressedTranslationZ="12dp"
                android:layout_margin="@dimen/fab_margin"
                android:layout_centerInParent="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:contentDescription="@string/action_share"
                app:rippleColor="@android:color/white"
                app:borderWidth="0dp"/>
        </RelativeLayout>

        <android.support.v4.widget.NestedScrollView
            android:id="@+id/scrollview_recipe_details"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/recipe_description_cards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card_link_recipe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_cardview"
                    android:layout_marginRight="@dimen/margin_cardview"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="@dimen/margin_cardview"
                    android:clickable="false"
                    android:focusable="false"
                    >
                    <TextView
                        android:id="@+id/cardview_link_textview"
                        style="@style/TextAppearance.AppCompat.Subhead"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginLeft="@dimen/margin_text_cardview"
                        android:layout_marginRight="@dimen/margin_text_cardview"
                        android:layout_marginTop="@dimen/margin_text_cardview"
                        android:layout_marginBottom="@dimen/margin_text_cardview"
                        />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card_ingredients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_cardview"
                    android:layout_marginRight="@dimen/margin_cardview"
                    android:layout_marginTop="@dimen/margin_cardview"
                    android:layout_marginBottom="@dimen/margin_cardview"
                    android:clickable="false"
                    android:focusable="false"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/ingredients_title_cardview"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:textStyle="bold"
                            android:textColor="@color/ColorDescriptions"
                            android:text="@string/ingredients"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/margin_text_cardview"
                            android:layout_marginRight="@dimen/margin_text_cardview"
                            android:layout_marginTop="@dimen/margin_text_cardview"
                            android:layout_marginBottom="@dimen/margin_text_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|right"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/margin_text_cardview"
                            android:layout_marginRight="@dimen/margin_text_cardview"
                            android:layout_marginTop="@dimen/margin_text_cardview"
                            android:layout_marginBottom="@dimen/margin_text_cardview"
                            android:src="@drawable/ic_ingredients_32"
                            android:tint="@color/ColorDescriptions"/>
                        <LinearLayout
                            android:id="@+id/listview_ingredients_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@+id/ingredients_title_cardview">
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/card_steps"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_cardview"
                    android:layout_marginRight="@dimen/margin_cardview"
                    android:layout_marginTop="@dimen/margin_cardview"
                    android:layout_marginBottom="@dimen/margin_cardview"
                    android:clickable="false"
                    android:focusable="false"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/steps_title_cardview"
                            style="@style/TextAppearance.AppCompat.Headline"
                            android:textStyle="bold"
                            android:textColor="@color/ColorDescriptions"
                            android:text="@string/steps"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentLeft="true"
                            android:layout_marginLeft="@dimen/margin_text_cardview"
                            android:layout_marginRight="@dimen/margin_text_cardview"
                            android:layout_marginTop="@dimen/margin_text_cardview"
                            android:layout_marginBottom="@dimen/margin_text_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:paddingBottom="@dimen/margin_cardview"/>
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="top|right"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginLeft="@dimen/margin_text_cardview"
                            android:layout_marginRight="@dimen/margin_text_cardview"
                            android:layout_marginTop="@dimen/margin_text_cardview"
                            android:layout_marginBottom="@dimen/margin_text_cardview"
                            android:src="@drawable/ic_procedure_32"
                            android:tint="@color/ColorDescriptions"/>
                        <LinearLayout
                            android:id="@+id/listview_steps_cardview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_below="@id/steps_title_cardview"
                            >
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>



    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>
